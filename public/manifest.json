{
  "manifest_version": 3,
  "name": "React URL Memo",
  "version": "1.0.0",
  "description": "現在のURLに紐づくメモを保存します",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": ["https://mymemo-y2n2.onrender.com/*"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts":[
    {
    "matches":["<all_urls>"],
    "js":["content.js","canvas.js"],
    "run_at": "document_idle"
    }
  ]
}
